    <script type="text/javascript">
        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });
        var ue = UE.getEditor('editor');
        Fun_fileList("/Home/WebUpLoad", "fileList1", "filePicker1", "Image");
        $(function () {
            $("#form-admin-add").validate({
                rules: {
                    Title: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    },
                    Name: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    },
                    SubName: {
                        required: true,
                        minlength: 2,
                        maxlength: 500
                    }
                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    $(form).ajaxSubmit({
                        url: "/IM/GetIMAdd",
                        type: "POST",
                        dataType: "json",
                        data: { "Content": UE.getEditor('editor').getContent() },
                        success: function (data) {
                            if (data.data == "success") {
                                layer.msg(data.content, { icon: 1, time: 1000 }, function () {
                                    $.parentReload();
                                });
                            }
                            else {
                                layer.msg(data.content, { icon: 0 });
                            }
                        },
                        error: function (xhr, error, ex) {
                            layer.msg("出现错误，请稍后再试，带来不便，敬请谅解", { icon: 0 });
                        }
                    });
                    return false;
                }
            });
        });
    </script>
