    <script type="text/javascript">
            var vm = new Vue({
                el: "#myApp",
                data: {
                    List: ""
                },
                methods: {
                    getList: function () {
                        $.post("GetAdvertisementInfo", function (data) {
                            vm.List = data.data;
                            //公司Logo
                            Fun_fileList("/Home/WebUpLoad", "fileList", "filePicker", "CompanyLogo");
                            FillImage(data.data.AdvertisementId, data.data.CompanyLogo, "fileList");
                            //公司二维码
                            Fun_fileList("/Home/WebUpLoad", "fileList1", "filePicker1", "CompanyQRCode");
                            FillImage(data.data.AdvertisementId, data.data.CompanyQRCode, "fileList1");
                        })
                    }
                }
            })
            vm.getList();
            $("#form-admin-add").validate({
                rules: {
                    CompanyName: {
                        required: true,
                        minlength: 2,
                        maxlength: 20
                    },
                    CompanyAddress: {
                        required: true,
                        minlength: 2,
                        maxlength: 20
                    },
                    CompanyPhone: {
                        required: true,
                    }
                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    $(form).ajaxSubmit({
                        url: "/Account/EditAdvertisement",
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            if (data.data == "success") {
                                layer.msg(data.content, { icon: 1, time: 1000 }, function () {
                                    $.reload();
                                });
                            }
                            else {
                                layer.msg(data.content, { icon: 0 });
                            }
                        },
                        error: function (xhr, error, ex) {
                            layer.msg("出现错误，请稍后再试，带来不便，敬请谅解", { icon: 0 });
                        }
                    });
                    return false;
                }
            });
    </script>
