    <script type="text/javascript">
       
        var Request = $.GetRequest();
        var vm = new Vue({
            el: "#AdminAdd",
            data: {
                RoleList: '',
            },
            methods: {
                getList: function () {
                    var _this = this;
                    $.post('/Account/AuthorityList', function (data) {
                        _this.RoleList = data.data;
                    })
                }
            }
        })
        vm.getList();
        $(function () {
            $("#form-admin-add").validate({
                rules: {
                    UserCode: {
                        required: true,
                        minlength: 2,
                        maxlength: 10
                    },
                    UserName: {
                        required: true,
                        minlength: 2,
                        maxlength: 6
                    },
                    UserPassword: {
                        required: true,
                    },
                    UserPassword2: {
                        required: true,
                        equalTo: "#UserPassword"
                    },
                    UserPhone: {
                        required: true,
                        isPhone: true,
                    },
                    AuthorityId: {
                        required: true,
                    },
                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    $(form).ajaxSubmit({
                        url: "/Account/AddAdmin",
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            if (data.data == "success") {
                                layer.msg(data.content, { icon: 1,time:1000 }, function () {
                                    $.parentReload();
                                });
                            }
                            else {
                                layer.msg(data.content, { icon: 0 });
                            }
                        },
                        error: function (xhr, error, ex) {
                            layer.msg("出现错误，请稍后再试，带来不便，敬请谅解", { icon: 0 });
                        }
                    });
                    return false;
                }
            });
        });
    </script>
    <!--/请在上方写此页面业务相关的脚本-->
