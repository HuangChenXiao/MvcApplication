<body>
    <article class="page-container" id="myApp" style="width:95%">
        <form class="form form-horizontal" id="form-admin-add">
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>城市：</label>
                <div class="formControls col-xs-4 col-sm-4">
                    <span class="select-box">
                        <select class="select" name="UpCity" id="UpCity" size="1" onchange="selectCity()">
                            <template v-for="item in UpCity">
                                <template v-if="item.ID==List.UpCity">
                                    <option selected v-bind:value="item.ID" v-text="item.NAME"></option>
                                </template>
                                <template v-else>
                                    <option v-bind:value="item.ID" v-text="item.NAME"></option>
                                </template>
                            </template>
                        </select>
                    </span>
                </div>
                <div class="formControls col-xs-4 col-sm-5">
                    <span class="select-box">
                        <select class="select" name="City" id="City" size="1"></select>
                    </span>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>公司名称：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.Company" type="text" class="input-text" placeholder="请输入公司名称（例如：xxx公司）" id="Company" name="Company">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>案例名称：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectName" type="text" class="input-text" placeholder="请输入案例名称（例如：xxx案例）" id="ProjectName" name="ProjectName">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>案例时间：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectTime" type="text" class="input-text" placeholder="请输入案例时间（例如：春季、秋季）" id="ProjectTime" name="ProjectTime">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>案例报价：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectPrice" type="text" class="input-text" placeholder="请输入案例报价（例如：100）" id="ProjectPrice" name="ProjectPrice">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>行程天数：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectTripDays" type="text" class="input-text" placeholder="请输入行程天数（例如：1天）" id="ProjectTripDays" name="ProjectTripDays">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>案例主题：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectTitle" type="text" class="input-text" placeholder="请输入案例主题（例如：xx骑行）" id="ProjectTitle" name="ProjectTitle">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>案例特色：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectSpecial" type="text" class="input-text" placeholder="请输入案例特色（例如：xx特惠|畅快骑行体验）用|隔开" id="ProjectSpecial" name="ProjectSpecial">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>状态：</label>
                <div class="formControls col-xs-8 col-sm-9 skin-minimal">
                    <template v-if="List.Status==1">
                        <div class="radio-box">
                            <input name="Status" value="1" type="radio" id="radio-1" checked>
                            <label for="radio-1">上架</label>
                        </div>
                        <div class="radio-box">
                            <input name="Status" type="radio" value="0" id="radio-2">
                            <label for="radio-2">下架</label>
                        </div>
                    </template>
                    <template v-else>
                        <div class="radio-box">
                            <input name="Status" value="1" type="radio" id="radio-1">
                            <label for="radio-1">上架</label>
                        </div>
                        <div class="radio-box">
                            <input name="Status" type="radio" value="0" id="radio-2" checked>
                            <label for="radio-2">下架</label>
                        </div>
                    </template>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">案例简介：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea v-text="List.ProjectDescription" name="ProjectDescription" cols="" rows="" class="textarea" placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="案例简介不能为空！" onkeyup="textarealength(this,200)"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">关联项目：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <select class="chzn-select input-text" id="UpProjectId" name="UpProjectId" data-placeholder="关联正在运营的项目" tabindex="1">
                        <option value=""></option>
                        <template v-for="item in ProjectList">
                            <template v-if="item.ProjectId==List.ProjectId">
                                <option selected v-bind:value="item.ProjectId" v-text="item.ProjectName"></option>
                            </template>
                            <template v-else>
                                <option v-bind:value="item.ProjectId" v-text="item.ProjectName"></option>
                            </template>
                        </template>
                    </select>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">缩略图：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <div class="uploader-thum-container">
                        <div id="fileList1" class="uploader-list"></div>
                        <div id="filePicker1">选择图片</div>
                    </div>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">图片上传：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <div class="uploader-list-container">
                        <div class="uploader-list manyImage"></div>
                        <div class="queueList">
                            <div id="dndArea" class="placeholder">
                                <div id="filePicker-2"></div>
                                <p>或将照片拖到这里，单次最多可选10张</p>
                            </div>
                        </div>
                        <div class="statusBar" style="display:none;">
                            <div class="progress"> <span class="text">0%</span> <span class="percentage"></span> </div>
                            <div class="info"></div>
                            <div class="btns">
                                <div id="filePicker2"></div>
                                <div class="uploadBtn">开始上传</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row cl">
                <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
                    <input v-bind:value="List.ProjectPic" type="hidden" id="ProjectPic" name="ProjectPic" />
                    <input v-bind:value="List.ProjectMinPic" type="hidden" id="ProjectMinPic" name="ProjectMinPic" />
                    <input v-bind:value="List.ProjectId" type="hidden" id="ProjectId" name="ProjectId" />
                    <input v-bind:value="List.IsWonderfulCase" type="hidden" id="IsWonderfulCase" name="IsWonderfulCase" value="true" />
                    <input class="btn btn-primary radius" type="submit" value="提交">
                </div>
            </div>
        </form>
    </article>
