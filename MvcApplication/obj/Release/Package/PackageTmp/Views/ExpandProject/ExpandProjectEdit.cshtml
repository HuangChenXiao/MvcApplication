    <script type="text/javascript">
        var Request = $.GetRequest();
        var IsUpdateImg = false;
        var vm = new Vue({
            el: "#myApp",
            data: {
                List: "",
                ProjectType: "",
                UpCity: "",
                ExpandType: '',
                ExpandActivity: '',
                strActivityId: ''
            },
            methods: {
                getList: function () {
                    $.post("GetExpandProjectInfo", { "ProjectId": Request.ProjectId }, function (data) {
                        vm.List = data.data;
                        if (data.data.ActivityId) {
                            vm.strActivityId = data.data.ActivityId.split(',');
                        }
                        $.post("/ProjectType/GetProjectTypeIndex", { "ProjectTypeId": data.data.ProjectTypeId }, function (data) {
                            vm.ProjectType = data.data;
                        })
                        GetExpandActivity(data.data.ProjectTypeId);
                    })
                    $.post("GetCity", { "KeyId": 0 }, function (data) {
                        vm.UpCity = data.data;
                    })
                }
            },
            updated: function () {
                if (!IsUpdateImg && vm.List) {
                    IsUpdateImg = true;
                    if (vm.List.ProjectPic) {
                        for (var i = 0; i < $.splitSymbol(vm.List.ProjectPic).split(',').length; i++) {
                            getimglist(vm.List.ProjectPic.split(',')[i]);
                        }
                    }
                    Fun_fileList("/Home/WebUpLoad", "fileList1", "filePicker1", "ProjectMinPic");
                    FillImage(vm.List.ProjectId, vm.List.ProjectMinPic, "fileList1");
                }
                selectCity();
                selectExpandActivity()
            }
        })
        vm.getList();
        function GetExpandActivity(ProjectTypeId) {
            $.post("GetExpandActivityInfo", { "ProjectTypeId": ProjectTypeId }, function (data) {
                vm.ExpandType = data.ExpandType;
                vm.ExpandActivity = data.ExpandActivity;
                $("#ActivetyCount").val(data.ExpandType.length)
            })
        }
        function selectExpandActivity() {
            var expandactivity = $(".expandactivity input[type=checkbox]");
            for (var i = 0; i < expandactivity.length; i++) {
                for (var y = 0; y < vm.strActivityId.length; y++) {
                    if (expandactivity[i].value == vm.strActivityId[y]) {
                        $(expandactivity[i]).attr("checked", true);
                    }
                }
            }
            $('.skin-minimal input').iCheck({
                checkboxClass: 'icheckbox-blue',
                radioClass: 'iradio-blue',
                increaseArea: '20%'
            });
        }
        function selectCity() {
            var KeyId = $("#UpCity").val()
            $.post("GetCity", { "KeyId": KeyId }, function (data) {
                $("#City").empty();
                for (var i = 0; i < data.data.length; i++) {
                    if (vm.List.City == data.data[i].ID) {
                        $("#City").append('<option selected value="' + data.data[i].ID + '">' + data.data[i].NAME + '</option>')
                    }
                    else {
                        $("#City").append('<option value="' + data.data[i].ID + '">' + data.data[i].NAME + '</option>')
                    }
                }
            })
        }

        myupload('ProjectPic');
        function deleteimg(_this) {
            $(_this).parents(".file-item").remove();
            var strimg = '';
            for (var i = 0; i < $(".manyImage .file-item img").length ; i++) {
                strimg += $(".manyImage .file-item img").attr("src") + ",";
            }
            $("#ProjectPic").val(strimg);
        }
        $(function () {
            $("#form-admin-add").validate({
                rules: {
                    ProjectName: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    },
                    ProjectTime: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    },
                    ProjectPrice: {
                        required: true,
                        minlength: 2,
                        maxlength: 50,
                        number: true
                    },
                    ProjectTitle: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    },
                    ProjectSpecial: {
                        required: true,
                        minlength: 2,
                        maxlength: 50
                    },
                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    $(form).ajaxSubmit({
                        url: "/ExpandProject/EditExpandProject",
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            if (data.data == "success") {
                                layer.msg("项目" + data.content, { icon: 1, time: 1000 }, function () {
                                    $.parentReload();
                                });
                            }
                            else {
                                layer.msg("项目" + data.content, { icon: 0 });
                            }
                        },
                        error: function (xhr, error, ex) {
                            layer.msg("出现错误，请稍后再试，带来不便，敬请谅解", { icon: 0 });
                        }
                    });
                    return false;
                }
            });
        });
    </script>
