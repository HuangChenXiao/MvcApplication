    <article class="page-container" id="myApp" style="width:95%">
        <form class="form form-horizontal" id="form-admin-add">
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>项目类型：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <span class="select-box" style="background:#eee">
                        <select class="select" name="ProjectTypeId" id="ProjectTypeId" size="1" onchange="GetExpandActivity($(this).val())" style="background:#eee">
                            <template v-for="item in ProjectType">
                                <template v-if="List.ProjectTypeId==item.ProjectTypeId">
                                    <option selected v-bind:value="item.ProjectTypeId" v-text="item.ProjectTypeName"></option>
                                </template>
                                @*<template v-else>
                                    <option v-bind:value="item.ProjectTypeId" v-text="item.ProjectTypeName"></option>
                                </template>*@
                            </template>

                        </select>
                    </span>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>城市：</label>
                <div class="formControls col-xs-4 col-sm-4">
                    <span class="select-box">
                        <select class="select" name="UpCity" id="UpCity" size="1" onchange="selectCity()">
                            <template v-for="item in UpCity">
                                <template v-if="item.ID==List.UpCity">
                                    <option selected v-bind:value="item.ID" v-text="item.NAME"></option>
                                </template>
                                <template v-else>
                                    <option v-bind:value="item.ID" v-text="item.NAME"></option>
                                </template>
                            </template>
                        </select>
                    </span>
                </div>
                <div class="formControls col-xs-4 col-sm-5">
                    <span class="select-box">
                        <select class="select" name="City" id="City" size="1"></select>
                    </span>
                </div>
            </div>
            <template v-for="type in ExpandType">
                <div class="row cl expandactivity">
                    <label class="form-label col-xs-4 col-sm-3 ActivetyCount"><span v-text="type.ExpandTypeName"></span>:</label>
                    <div class="formControls col-xs-8 col-sm-9 skin-minimal">
                        <template v-for="activity in ExpandActivity">
                            <template v-if="activity.ExpandTypeId==type.ExpandTypeId">
                                <div class="radio-box" style="height:30px">
                                    <input v-bind:name="'ActivityId'+type.ExpandTypeId" v-bind:value="activity.ActivityId" type="checkbox" v-bind:id="'ActivityId'+activity.ActivityId">
                                    <label v-bind:for="'ActivityId'+activity.ActivityId" v-text="activity.ActivityName"></label>
                                </div>
                            </template>
                        </template>
                    </div>
                </div>
            </template>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>项目名称：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectName" type="text" class="input-text" placeholder="请输入项目名称（例如：xxx徒步旅行）" id="ProjectName" name="ProjectName">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>项目时间：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectTime" type="text" class="input-text" placeholder="请输入项目时间（例如：全年）" id="ProjectTime" name="ProjectTime">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>项目报价：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectPrice" type="text" class="input-text" placeholder="请输入项目报价（例如：520）" id="ProjectPrice" name="ProjectPrice">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>行程天数：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectTripDays" type="text" class="input-text" placeholder="请输入行程天数（例如：5天）" id="ProjectTripDays" name="ProjectTripDays">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>项目主题：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectTitle" type="text" class="input-text" placeholder="请输入项目主题（例如：xx徒步）" id="ProjectTitle" name="ProjectTitle">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>项目特色：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input v-bind:value="List.ProjectSpecial" type="text" class="input-text" placeholder="请输入项目特色（例如：灵白古道穿越|尽览林脉雄姿|春季踏青徒步|团建前行好心情）用|隔开" id="ProjectSpecial" name="ProjectSpecial">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>状态：</label>
                <div class="formControls col-xs-8 col-sm-9 skin-minimal">
                    <template v-if="List.Status==1">
                        <div class="radio-box">
                            <input name="Status" value="1" type="radio" id="radio-1" checked>
                            <label for="radio-1">上架</label>
                        </div>
                        <div class="radio-box">
                            <input name="Status" type="radio" value="0" id="radio-2">
                            <label for="radio-2">下架</label>
                        </div>
                    </template>
                    <template v-else>
                        <div class="radio-box">
                            <input name="Status" value="1" type="radio" id="radio-1">
                            <label for="radio-1">上架</label>
                        </div>
                        <div class="radio-box">
                            <input name="Status" type="radio" value="0" id="radio-2" checked>
                            <label for="radio-2">下架</label>
                        </div>
                    </template>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>热门：</label>
                <div class="formControls col-xs-8 col-sm-9 skin-minimal">
                    <template v-if="List.IsHot==1">
                        <div class="radio-box">
                            <input name="IsHot" value="1" type="radio" id="radio-3" checked>
                            <label for="radio-3">是&nbsp;&nbsp;&nbsp;</label>
                        </div>
                        <div class="radio-box">
                            <input name="IsHot" type="radio" value="0" id="radio-4">
                            <label for="radio-4">否</label>
                        </div>
                    </template>
                    <template v-else>
                        <div class="radio-box">
                            <input name="IsHot" value="1" type="radio" id="radio-3">
                            <label for="radio-3">是&nbsp;&nbsp;&nbsp;</label>
                        </div>
                        <div class="radio-box">
                            <input name="IsHot" type="radio" value="0" id="radio-4" checked>
                            <label for="radio-4">否</label>
                        </div>
                    </template>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">项目简介：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea v-text="List.ProjectDescription" name="ProjectDescription" cols="" rows="" class="textarea" placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="项目简介不能为空！" onkeyup="textarealength(this,200)"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">缩略图：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <div class="uploader-thum-container">
                        <div id="fileList1" class="uploader-list"></div>
                        <div id="filePicker1">选择图片</div>
                    </div>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3">图片上传：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <div class="uploader-list-container">
                        <div class="uploader-list manyImage"></div>
                        <div class="queueList">
                            <div id="dndArea" class="placeholder">
                                <div id="filePicker-2"></div>
                                <p>或将照片拖到这里，单次最多可选10张</p>
                            </div>
                        </div>
                        <div class="statusBar" style="display:none;">
                            <div class="progress"> <span class="text">0%</span> <span class="percentage"></span> </div>
                            <div class="info"></div>
                            <div class="btns">
                                <div id="filePicker2"></div>
                                <div class="uploadBtn">开始上传</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row cl">
                <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
                    <input v-bind:value="List.ProjectPic" type="hidden" id="ProjectPic" name="ProjectPic" />
                    <input v-bind:value="List.ProjectMinPic" type="hidden" id="ProjectMinPic" name="ProjectMinPic" />
                    <input v-bind:value="List.ProjectId" type="hidden" id="ProjectId" name="ProjectId" />
                    <input type="hidden" id="IsWonderfulCase" name="IsWonderfulCase" value="0"/>
                    <input type="hidden" id="ActivetyCount" name="ActivetyCount"/>
                    <input class="btn btn-primary radius" type="submit" value="提交">
                </div>
            </div>
        </form>
    </article>
