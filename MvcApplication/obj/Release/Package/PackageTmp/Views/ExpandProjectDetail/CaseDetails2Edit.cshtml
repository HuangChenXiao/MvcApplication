    <script type="text/javascript">
        $(function () {
            var Request = $.GetRequest();

            var vm = new Vue({
                el: "#myApp",
                data: {
                    List: ""
                },
                methods: {
                    getList: function () {
                        $.post("GetExpandProjectDetailInfo", { "Id": Request.Id }, function (data) {
                            vm.List = data.data;
                            $("#Type").find("option[value='"+vm.List.Type+"']").attr("selected", true);
                        })
                    }
                },
                updated: function () {
                    UE.getEditor('editor');
                }
            })
            vm.getList();

            $("#form-admin-add").validate({
                rules: {
                    Name: {
                        required: true,
                        minlength: 2,
                        maxlength: 20
                    }
                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    $(form).ajaxSubmit({
                        url: "/ExpandProjectDetail/EditExpandProjectDetail",
                        type: "POST",
                        dataType: "json",
                        data: { "Content": UE.getEditor('editor').getContent() },
                        success: function (data) {
                            if (data.data == "success") {
                                layer.msg(data.content, { icon: 1, time: 1000 }, function () {
                                    $.parentReload();
                                });
                            }
                            else {
                                layer.msg(data.content, { icon: 0 });
                            }
                        },
                        error: function (xhr, error, ex) {
                            layer.msg("出现错误，请稍后再试，带来不便，敬请谅解", { icon: 0 });
                        }
                    });
                    return false;
                }
            });
        });
    </script>
