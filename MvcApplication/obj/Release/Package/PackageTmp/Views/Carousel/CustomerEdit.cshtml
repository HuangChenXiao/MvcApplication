    <script type="text/javascript">
        var Request = $.GetRequest();
        var vm = new Vue({
            el: "#myApp",
            data: {
                List: ""
            },
            methods: {
                getList: function () {
                    $.post("GetCarouselById", { "CarouselId": Request.CarouselId }, function (data) {
                        vm.List = data.data;
                        FillImage(vm.List.CarouselId, vm.List.Image, "fileList");
                    })
                }
            },
            updated: function () {

            }
        })
        vm.getList();

        Fun_fileList("/Home/WebUpLoad", "fileList", "filePicker", "Image");

        $("#form-admin-add").validate({
            rules: {
                Title: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                }
            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                $(form).ajaxSubmit({
                    url: "/Carousel/EditCarousel",
                    type: "POST",
                    dataType: "json",
                    success: function (data) {
                        if (data.data == "success") {
                            layer.msg("修改合作客户成功！", { icon: 1, time: 1000 }, function () {
                                $.parentReload();
                            });
                        }
                        else {
                            layer.msg("修改合作客户失败！", { icon: 0 });
                        }
                    },
                    error: function (xhr, error, ex) {
                        layer.msg("出现错误，请稍后再试，带来不便，敬请谅解", { icon: 0 });
                    }
                });
                return false;
            }
        });
    </script>
